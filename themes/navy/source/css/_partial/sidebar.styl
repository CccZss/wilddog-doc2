#sidebar
  position: fixed
  top: 72px
  z-index: 1000
  width: 170px
  height: 100%
  float: left
  padding-left: 20px
  padding-top: 70px
  padding-bottom: 140px
  margin-left: -200px
  font-size: 13px
  display: none
  @media mq-normal
    display: block
  .inner
    padding-left: 5px
    padding-right: 10px
    padding-bottom: 20px
    height: 100%
    overflow: auto
  .outer
    position: relative
    margin-bottom: 10px
    .selected
      border: 1px solid #999
      height: 30px
      line-height: 31px
      width: 140px
      padding-left: 10px
      border-radius: 3px
      letter-spacing: 1px
      position: relative
      color: #333
      cursor: pointer
      &:after
        content: ''
        position: absolute
        top: 12px
        right: 6px
        width: 0
        height: 3px
        border: 5px solid transparent
        border-top-color: #ccc
    ul.platforms
        display: none
        position: absolute
        width: 140px
        background: #fff
        z-index: 100
        border:1px solid #ccc
        border-top:none
        padding-top: 5px
        padding-bottom: 5px
        box-shadow: 0 0 6px rgba(0,0,0,.1)
        li
          line-height: 2
          padding-left: 10px
          a
           color: #666
           text-decoration:none
           &:hover
            color: #e6501e
  
.sidebar-title
  font-size: 14px
  color: #333
  display: inline-block
  line-height: 1
  &.single-title
    &:before,
    &:after
      display: none

.sidebar-nav .sidebar-title
  display: inline-block
  padding-right: 12px
  margin-bottom: 6px
  position: relative
  cursor: pointer
  font-weight: 500
  &.current
    color: #e6501e
  &.select
    &:after
      top: 5px
      transform: none
  &:after
      content: ''
      position: absolute
      top: 3px
      right: 0
      width: 0
      height: 2px
      border: 4px solid transparent
      border-top-color: #666
      transform: rotate(-90deg)

.sublist-item .sidebar-title
  color: #666
  margin-bottom: 0
  &.select
    margin-bottom: 6px

.sidebar-nav-item 
  padding-bottom: 16px

.sidebar-link
  font-weight: 500
  display: block
  color: color-default
  text-decoration: none
  line-height: 1.5
  font-size: 14px
  position: relative
  width: 100%
  word-break: keep-all
  word-wrap: break-word
  &.current
    color: #e6501e
  &:hover
    color: #e6501e
  &:before,
  &:after
    content: ''
    display: table
    clear: both

.sublist
  display: none
  border-left: 2px solid #eee
  &.current
    display: block

.sublist-item
  padding-top: 7px
  padding-bottom: 7px
  padding-left : 1em
  .sidebar-link
    line-height: 1
  .sublist
    .sidebar-link
      line-height: 1.5
      
.sidebar-link-text,
.icon-new
  float: left

.icon-new
  margin-top: -1px
  margin-left: 4px

.icon-preview
  border: 0
  box-shadow: none
  position: relative
  top: -8px
  border-radius: 0

.old-doc
  margin-top: 20px
  padding-top: 30px
  padding-right: 18px
  border-top: 1px solid #e5e5e5

.old-doc-link
  display: block
  color: #333
  text-decoration: none
  &:hover
    color: #e6501e
    path
      stroke: #e6501e
  .back-icon
    float: right
    img
      box-shadow: none
      
//左侧导航栏hacker
.sidebar-nav
  .sidebar-nav-item
    > .sidebar-title:first-child
      display:none
    > .sublist
      border-left: none

    
