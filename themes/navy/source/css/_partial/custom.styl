.article-content table
	border: 1px solid #d9d9d9
	border-bottom: 0
	border-collapse: collapse
	th
		padding-top: 11px
		padding-bottom: 11px
		padding-left: 20px
		border-right: 1px solid #ededed
		&:last-child
			border: 0
	tr
		border-bottom: 1px solid #d9d9d9
	td
		padding-top:10px
		padding-bottom: 10px
		padding-left: 20px
		border-right: 1px solid #f5f5f5
		&:last-child
			border: 0

.highlight table
	border: 0
	th,
	tr,
	td
		border:0