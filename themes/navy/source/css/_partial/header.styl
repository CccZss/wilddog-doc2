header-padding-normal = 10px
header-padding-max = 30px
logo-size = 40px

#header
  position: fixed
  left: 0
  top: 0
  z-index: 999
  padding-top: 20px
  width: 100%
  max-width: 100%
  background-color: #fff
  box-shadow: 0 2px 10px #eee
  overflow: hidden
  @media print
    display: none

#header-inner
  margin: 0 auto
  padding: 0
  max-width: max-width
  padding-right: 90px

#logo-wrap
  float: left
  width: auto
  border: 0

#logo
  hide-text()
  background: url("/images/logo.svg")
  width: logo-size
  height: logo-size
  background-size: @width @height
  display: block

#main-nav
  display: none
  float: left
  position: relative
  top: 10px
  padding-left: 106px
  @media mq-normal
    display: block

.main-nav-link
  display: inline-block
  color: #333
  text-decoration: none
  line-height: 26px
  padding-bottom: 0
  transition: 0.2s
  
  border-bottom: 2px solid #fff
  font-size: 15px
  display: inline-block
  margin-left: 56px
  transition: 0.3s
  &:hover
    color: #e6501e
    padding-bottom: 14px
    border-bottom-color: #e6501e
  &.current
    color: #e6501e
    padding-bottom: 14px
    border-bottom-color: #e6501e

#search-input-wrap
  padding-left: 6px
  padding-bottom: 8px
  border-bottom: 1px solid color-gray
  &.on
    display: inline-block

#search-input-icon
  color: #666
  padding-right: 0.5em
  display: inline-block
  opacity: 0.7

#search-input
  background: none
  font-size: inherit
  
  color: #666
  outline: none
  -webkit-appearance: none

#lang-select-wrap
  display: none
  position: relative
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit

.old-doc-link
  display: none
  float: right
  width: 110px
  height: 32px
  border: 1px solid #ccc
  border-radius: 3px
  line-height: 30px
  text-align: center
  text-decoration: none
  color: #666
  font-size: 12px
  margin-top: 10px
  @media mq-normal
    display: inline-block
  &:hover
    border-color: #666